<Window x:Class="Assignment.UI.PopUpValidationErrorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopUpWindow"
        Height="150" Width="250"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <ListBox MinHeight="60" ItemsSource="{Binding PopUpValidationErrorModel.MessageErrorCollection}" />
        <Button VerticalAlignment="Bottom" Content="Close" Margin="0,0,0,20" Command="{Binding CloseCommand}"/>
    </StackPanel>
</Window>